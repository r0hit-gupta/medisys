<% include header %>

<body>

    <% include infobars %>

<div class="content">
<% if (success == 1) { %>
  <div class="alert alert-success" role="alert">Product has been added successfully !</div>
<% } %>
<% if (success == 0) { %>
  <div class="alert alert-danger" role="alert">Error connecting to the database !</div>
<% } %>
<form class="form-horizontal" action="/post/newproduct" method="post">
  
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Product Name</label>
    <div class="col-sm-5">
      <input type="text" class="form-control" id="name" placeholder="Product Name" name="name" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="stock" class="col-sm-2 control-label">Stock</label>
    <div class="col-sm-3">
      <input type="number" class="form-control" id="stock" placeholder="Stock" name="stock" required>
    </div>
  </div>
 
  <div class="form-group">
    <label for="price" class="col-sm-2 control-label">Price &#8377</label>
    <div class="col-sm-3">
      <input type="text" class="form-control" id="price" placeholder="Price" name="price" required>
    </div>
  </div>

  <div class="form-group">
    <label for="supplier" class="col-sm-2 control-label">Supplier</label>
    <div class="col-sm-3">
      <select class="form-control" id="supplier" name="supplier">

        <% for (var i = 0; i < suppliers.length; i++){ %>
        <option value="<%= suppliers[i].name %>"><%= suppliers[i].name %></option>
        <% } %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label for="expiry" class="col-sm-2 control-label">Expiry Date</label>
    <div class="col-sm-3">
      <input type="date" class="form-control" id="expiry" placeholder="YYYY-MM-DD" name="expiry" required>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Add Product</button>
    </div>
  </div>
</form>
</div>
</body>
</html>